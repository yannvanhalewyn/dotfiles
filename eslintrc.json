{
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      1,
      "always"
    ],
    "max-len": [2, 85, 4],
    "no-fallthrough": 1
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "$": false
  }
}
